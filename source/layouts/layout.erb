<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title>Open Gift LFS - <%= current_page.data.title || "" %></title>

    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "normalize" %>
    <%= stylesheet_link_tag "animate.min" %>
    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" %>
    <%= javascript_include_tag  "wow.min" %>
    <script>
      new WOW().init();
    </script>
    <%= javascript_include_tag  "all" %>

  </head>

  <body>
    <div class="container">
      <%= yield %>
    </div>
    <!-- Go to www.addthis.com/dashboard to customize your tools -->
    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5124dd642546e42c" async="async"></script>
    <%= partial "partials/analytics" %>
  </body>
</html>